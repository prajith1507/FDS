# ==============================================================================
# FUZION DEVELOPMENT SUITE - SINGLE GLOBAL ENVIRONMENT TEMPLATE
# ==============================================================================
# This is the ONLY .env file you need to configure!
# Copy this file to .env and customize the values for your environment.
# The orchestrator will automatically sync this to all projects.

# ------------------------------------------------------------------------------
# BACKEND API CONFIGURATION
# ------------------------------------------------------------------------------
# Main backend API base URL - change to your API server
NEXT_PUBLIC_API_BASE_URL=https://your-api-server.com
BACKEND_BASE_URL=https://your-api-server.com

# ------------------------------------------------------------------------------
# API ENDPOINTS - ALL TOOLS
# ------------------------------------------------------------------------------
# Postman Tool Endpoints
NEXT_PUBLIC_COLLECTIONS_URL=https://your-api-server.com/api/collections/
NEXT_PUBLIC_BULK_UPDATE_URL=https://your-api-server.com/api/collections/bulk-update
NEXT_PUBLIC_SAVE_API_ENDPOINT=/api/apis/create
NEXT_PUBLIC_API_DETAILS_ENDPOINT=/api/apis/key

# DB Viewer Tool Endpoints
NEXT_PUBLIC_DATABASE_ENDPOINT=/api/database
NEXT_PUBLIC_HEALTH_CHECK_ENDPOINT=/api/health

# Transformer Tool Endpoints
NEXT_PUBLIC_TRANSFORMATION_ENDPOINT=/api/transformations
NEXT_PUBLIC_COPILOT_ENDPOINT=/api/copilot
NEXT_PUBLIC_FILE_UPLOAD_ENDPOINT=/api/files/upload

# ------------------------------------------------------------------------------
# SERVICE PORTS CONFIGURATION
# ------------------------------------------------------------------------------
# Change these if you have port conflicts
SUITE_DASHBOARD_PORT=3000
SUITE_DASHBOARD_URL=http://localhost:3000

DB_VIEWER_PORT=4001
DB_VIEWER_URL=http://localhost:4001

POSTMAN_PORT=4002
POSTMAN_URL=http://localhost:4002

TRANSFORMER_PORT=4003
TRANSFORMER_URL=http://localhost:4003

# ------------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# ------------------------------------------------------------------------------
NODE_ENV=development

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Auto-save delay (milliseconds)
AUTO_SAVE_DELAY=600

# ------------------------------------------------------------------------------
# SECURITY CONFIGURATION
# ------------------------------------------------------------------------------
DEFAULT_AUTH_TYPE=bearer

# ------------------------------------------------------------------------------
# FEATURE FLAGS
# ------------------------------------------------------------------------------
# Set to false in production
DEBUG_MODE=true
ENABLE_API_LOGGING=true

# ------------------------------------------------------------------------------
# HEALTH CHECK CONFIGURATION
# ------------------------------------------------------------------------------
HEALTH_CHECK_INTERVAL=5000
HEALTH_CHECK_TIMEOUT=3000