# ==============================================================================
# FUZION DEVELOPMENT SUITE - GLOBAL ENVIRONMENT CONFIGURATION
# ==============================================================================
# This single file contains ALL environment variables for the entire suite.
# All three tools (fuzion-db-viewer, fuzion-postman, fuzion-transformer) 
# and suite-ui will use this global configuration.

# ------------------------------------------------------------------------------
# BACKEND API CONFIGURATION
# ------------------------------------------------------------------------------
# Main backend API base URL - used by all tools
NEXT_PUBLIC_API_BASE_URL=https://obl-syncapi.fuzionest.com
BACKEND_BASE_URL=https://obl-syncapi.fuzionest.com

# ------------------------------------------------------------------------------
# API ENDPOINTS - POSTMAN TOOL
# ------------------------------------------------------------------------------
NEXT_PUBLIC_COLLECTIONS_URL=https://obl-syncapi.fuzionest.com/api/collections/
NEXT_PUBLIC_BULK_UPDATE_URL=https://obl-syncapi.fuzionest.com/api/collections/bulk-update
NEXT_PUBLIC_SAVE_API_ENDPOINT=/api/apis/create
NEXT_PUBLIC_API_DETAILS_ENDPOINT=/api/apis/key

# ------------------------------------------------------------------------------
# API ENDPOINTS - DB VIEWER TOOL
# ------------------------------------------------------------------------------
NEXT_PUBLIC_DATABASE_ENDPOINT=/api/database
NEXT_PUBLIC_HEALTH_CHECK_ENDPOINT=/api/health

# ------------------------------------------------------------------------------
# API ENDPOINTS - TRANSFORMER TOOL
# ------------------------------------------------------------------------------
NEXT_PUBLIC_TRANSFORMATION_ENDPOINT=/api/transformations
NEXT_PUBLIC_COPILOT_ENDPOINT=/api/copilot
NEXT_PUBLIC_FILE_UPLOAD_ENDPOINT=/api/files/upload

# ------------------------------------------------------------------------------
# SERVICE PORTS CONFIGURATION - localhost DEVELOPMENT
# ------------------------------------------------------------------------------
# Main Suite Dashboard
PORT=3000
SUITE_DASHBOARD_PORT=3000
SUITE_DASHBOARD_URL=http://localhost:3000
NEXT_PUBLIC_SUITE_DASHBOARD_URL=http://localhost:3000

# Database Viewer Service
DB_VIEWER_PORT=4001
DB_VIEWER_URL=http://localhost:4001
NEXT_PUBLIC_DB_VIEWER_URL=http://localhost:4001

# Postman API Testing Service  
POSTMAN_PORT=4002
POSTMAN_URL=http://localhost:4002
NEXT_PUBLIC_POSTMAN_URL=http://localhost:4002

# Data Transformer Service
TRANSFORMER_PORT=4003
TRANSFORMER_URL=http://localhost:4003
NEXT_PUBLIC_TRANSFORMER_URL=http://localhost:4003

# ------------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# ------------------------------------------------------------------------------
# Node environment
NODE_ENV=development

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Auto-save delay (milliseconds)
AUTO_SAVE_DELAY=600

# File Processing Configuration (Transformer)
MAX_FILE_SIZE=10485760
SUPPORTED_FILE_TYPES=json,xml,csv,yaml

# ------------------------------------------------------------------------------
# SECURITY CONFIGURATION
# ------------------------------------------------------------------------------
# Default auth type for API requests
DEFAULT_AUTH_TYPE=bearer

# ------------------------------------------------------------------------------
# FEATURE FLAGS
# ------------------------------------------------------------------------------
# Enable debug logging
DEBUG_MODE=true

# Enable console logging for API calls
ENABLE_API_LOGGING=true

# ------------------------------------------------------------------------------
# HEALTH CHECK CONFIGURATION
# ------------------------------------------------------------------------------
NEXT_PUBLIC_HEALTH_CHECK_INTERVAL=5000
NEXT_PUBLIC_HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_INTERVAL=5000
HEALTH_CHECK_TIMEOUT=3000